<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Seteeduca - Cadastro de Responsável</title>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Allerta&family=Kodchasan:wght@400;500;700&display=swap" rel="stylesheet" />
  <style>
    * {
       margin: 0; 
       padding: 0; 
       box-sizing: border-box; 
      }
    body { 
      font-family: 'Kodchasan', sans-serif; 
      background-color: #F3F3F3;
       min-height: 100vh; 
       display: flex; 
       flex-direction: column; 
      }
    .logo-container {
       display: flex; 
       justify-content: flex-end; 
       margin-top: 15px; 
       padding-right: 15px; 
      }
    .logo { 
      width: 90px;
       height: auto; 
       position: relative; 
       top: -15px;
       }
    header { 
      background-color: #F88C12; 
       height: 80px; 
       margin-top: -15px; 
       display: flex; 
       align-items: center;
       justify-content: center; 
       box-shadow: 0 4px 6px rgba(0,0,0,0.1);
      }
    .header-title { 
      display: flex; 
      align-items: center;
      position: relative; 
      top: 0.7vh;
      gap: 10px; 
      font-size: 1.5rem; 
      color: black; 
      font-family: 'Kodchasan', sans-serif;
     }
    .header-title b { 
      font-family: 'Allerta', sans-serif; 
    }
    .header-title svg { 
      width: 35px; 
      height: 35px;
     }
    .caixa { 
      width: 90%;
       max-width: 800px;
        background-color: white; 
        border-radius: 20px;
         box-shadow: 0 6px 15px rgba(0,0,0,0.1); 
         padding: 40px; 
         margin: 30px auto; 
         border-left: 5px solid #F88C12;
         }
    form { 
      display: flex;
       flex-direction: column;
        gap: 20px; 
      }
    .campo { 
      display: flex; 
      flex-direction: column;
       gap: 8px; 
      }
    label { 
      font-weight: 600; 
      font-size: 1rem;
       margin-left: 5px; 
      }
    input, select { 
      padding: 14px 18px; 
      border: 2px solid #F88C12; 
      border-radius: 12px; 
      font-size: 1rem; 
      background: #ffffff; 
      font-family: 'Kodchasan', sans-serif;
    }
    input:focus, select:focus { 
      outline: none; 
      border-color: #ce7611; 
      box-shadow: 0 0 0 3px rgba(210, 137, 42, 0.2); 
    }
    select {
      cursor: pointer;
      appearance: none;
      background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%23000000' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M6 8l4 4 4-4'/%3e%3c/svg%3e");
      background-position: right 12px center;
      background-repeat: no-repeat;
      background-size: 16px;
      padding-right: 40px;
    }
    
    select option {
      padding: 10px;
      font-family: 'Kodchasan', sans-serif;
      
    }
    .link-cadastrar {
       width: 220px; 
       height: 50px; 
       background-color: #F88C12;
        color: #fff; 
        border: none;
         border-radius: 12px;
          font-weight: bold; 
          cursor: pointer; 
          margin: 20px auto 0; 
          box-shadow: 0 4px 8px #ee840a; 
          font-family: 'Allerta', sans-serif; 
          font-size: 1rem; 
        }
    .link-cadastrar:hover { 
      background-color: #F88C12; 
    }
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .sidebar {
            width: 280px;
            height: 100vh;
            background: #FFF4DF;
            color: white;
            padding: 20px 0;
            position: fixed;
            left: 0;
            top: 0;
            display: flex;
            flex-direction: column;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.2);
            z-index: 100;
        }

        .logo {
            padding: 25px 20px;
            text-align: center;
            margin-bottom: 25px;
        }


        .menu {
            flex: 1;
            padding: 0 18px;
        }

        .menu-item {
            padding: 16px 20px;
            margin-bottom: 6px;
            border-radius: 6px;
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
            display: flex;
            align-items: center;
            font-weight: 500;
            overflow: visible;
            color: black;
        }

        .menu-item i {
            margin-right: 15px;
            font-size: 18px;
            width: 24px;
            text-align: center;
            z-index: 2;
        }

        .menu-item span {
            z-index: 2;
            font-size: 15px;
        }
        .menu-item:hover {
        background-color: #6c757d21;
        }


        .menu-item::after {
            padding: 0 18px;
            content: '';
            position: absolute;
            bottom: -3px;
            left: 20px;
            height: 2px;
            width: 0px;
            transition: width 0.3s ease;
            border-radius: 1px;
        }

        .menu-item:hover::after {
            width: calc(100% - 40px);
        }

        .menu-item:nth-child(1)::after { background-color: #F4BF27; }
        .menu-item:nth-child(2)::after { background-color: #F88C12; }
        .menu-item:nth-child(3)::after { background-color: #59C631; }
        .menu-item:nth-child(4)::after { background-color: #D22A2A; }
        .menu-item:nth-child(5)::after { background-color: #00A6FF; }
        .menu-item:nth-child(6)::after { background-color: #9747FF; }


        .menu-item.active {
            background-color: rgba(255, 255, 255, 0.12);
            color: black;
        }

        .menu-item.active::before {
            content: '';
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background-color: #FFDD40;
            box-shadow: 0 0 8px #FFDD40;
            z-index: 2;
        }

         .sete {
           margin-left: 800px;
           margin-top: -400px;
        }



        @media (max-width: 992px) {
            .sidebar {
                width: 230px;
            }
            
        }

        @media (max-width: 768px) {
            .sidebar {
                width: 70px;
            }
            
            
            .menu-item span {
                display: none;
            }
            
            .menu-item i {
                margin-right: 0;
                font-size: 20px;
            }
            
            .menu-item::after {
                left: 15px;
                bottom: 0;
            }
            
            .menu-item:hover::after {
                width: 40px;
            }
            
        
        }

        @media (max-width: 576px) {
            .sidebar {
                width: 100%;
                height: auto;
                position: relative;
            }
            .menu {
                display: flex;
                flex-wrap: wrap;
                justify-content: center;
                gap: 8px;
            }
            
            .menu-item {
                flex: 1;
                min-width: 120px;
                justify-content: center;
                padding: 12px;
            }
            
            .menu-item i {
                margin-right: 0;
            }
        }
    
  </style>
</head>
<body>

  <!-- HEADER ORIGINAL -->
  <header>
    <div class="header-title">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 76 76">
        <circle cx="38" cy="38" r="28" stroke="black" stroke-width="4.75"/>
        <circle cx="38" cy="36" r="12" stroke="black" stroke-width="4.75"/>
        <path d="M18.9 59.2c1.8-3.5 4.5-6.5 7.9-8.6s7.2-3.1 11.2-3.1c4 0 7.9 1.1 11.2 3.1s6.1 5.1 7.9 8.6" stroke="black" stroke-width="4.75"/>
      </svg>
      <span>Cadastro <b>PROFESSOR</b></span>
    </div>
  </header>

  <!-- FORM -->
  <div class="caixa">
    <form id="formCadastroResponsavel">
      <div class="campo"><label for="nome">Nome completo:</label><input type="text" id="nome" required></div>
      <div class="campo"><label for="cpf">CPF:</label><input type="text" id="cpf" required></div>
      <div class="campo"><label for="telefone">Telefone:</label><input type="text" id="telefone" required></div>
      <div class="campo"><label for="email">E-mail:</label><input type="email" id="email" required></div>
      <div class="campo"><label for="endereco">Endereço:</label><input type="text" id="endereco" required></div>
      <div class="campo">
        <label for="turno">Categoria:</label>
        <select id="turno" name="turno" required>
          <option value="" disabled selected>Selecione a categoria</option>
          <option value="Matutino">Mensal</option>
          <option value="Vespertino">Horista</option>
        </select>
      </div>
      <button type="submit" class="link-cadastrar">Cadastrar professor</button>
    </form>
  </div>

  <script>
    document.getElementById('formCadastroResponsavel').addEventListener('submit', function(e) {
      e.preventDefault();
      const responsavel = {
        nome: nome.value,
        cpf: cpf.value,
        telefone: telefone.value,
        email: email.value,
        cep: cep.value,
        endereco: endereco.value,
        numero: numero.value,
        complemento: complemento.value
      };
      localStorage.setItem('responsavelAtual', JSON.stringify(responsavel));
      window.location.href = '/cadastro-aluno';
    });
  </script>

      <div class="sidebar">
        <div class="logo">
           <img src="imagem/logo.png" alt="logo">
        </div>
        
        <div class="menu">
            <div class="menu-item">
                <i class="fas fa-home"></i>
                <span>INÍCIO</span>
            </div>
            <div class="menu-item active">
                <i class="fas fa-chalkboard-teacher"></i>
                <span>PROFESSOR</span>
            </div>
            <div class="menu-item">
                <i class="fas fa-dollar-sign"></i>
                <span>FINANCEIRO</span>
            </div>
            <div class="menu-item">
                <i class="fas fa-users"></i>
                <span>TURMAS</span>
            </div>
            <div class="menu-item">
                <i class="fas fa-user-graduate"></i>
                <span>MATRÍCULA</span>
            </div>
            <div class="menu-item">
                <i class="fas fa-address-card"></i>
                <span>CADASTRO</span>
            </div>
        </div>
    </div>


    <script>
     
        document.querySelectorAll('.menu-item').forEach(item => {
            item.addEventListener('click', function() {
        
                document.querySelectorAll('.menu-item').forEach(i => {
                    i.classList.remove('active');
                });
                
                
                this.classList.add('active');
            });
        });
    </script>
    
</body>
</html>
