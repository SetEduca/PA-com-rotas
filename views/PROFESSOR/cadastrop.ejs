      </a>
    </div>
  </div>

  <!-- Main Content -->
  <div class="main-content">
    <div class="header">
      <div class="header-title">
        <i class="fas fa-users"></i>
        <span>Cadastrar <b>PROFESSORES</b></span>
      </div>
      <div class="profile" id="profile-toggle">
        <div class="profile-header">
          <i class="fas fa-user-circle profile-icon"></i>
          <i class="fas fa-chevron-down profile-arrow"></i>
        </div>
        <div class="profile-dropdown" id="profile-dropdown-menu">
          <a href="/meuperfil"><i class="fas fa-user"></i> Meu perfil</a>
          <a href="/mensalidade"><i class="fas fa-file-invoice-dollar"></i> Mensalidade</a>
          <a href="/arquivados"><i class="fas fa-archive"></i> Arquivados</a>
        </div>
      </div>
    </div>

      <!-- Content Area -->
    <div class="content-area">
      <div class="caixa">

       <% if (typeof mensagem !== 'undefined' && mensagem) { %>
    <div class="alerta-erro">
        <%= mensagem %>
    </div>
    <% } %>
       <form action="/professores/cadastro" method="POST" id="formCadastro">
          <div class="campo">
            <label for="professor">Nome:</label>
            <input type="text" id="professor" name="professor" placeholder="Nome completo do professor" required
            value="<%= typeof dadosAnteriores !== 'undefined' ? dadosAnteriores.nome : '' %>">

          </div>
          <div class="campo">
            <label for="cpf">CPF:</label>
            <input type="text" id="cpf" name="cpf" placeholder="CPF do professor" required
            value="<%= typeof dadosAnteriores !== 'undefined' ? dadosAnteriores.cpf : '' %>">
          </div>
          <div class="campo">
            <label for="Telefone">Telefone:</label>
            <input type="text" id="Telefone" name="Telefone" placeholder="Telefone para contato do professor" required
            value="<%= typeof dadosAnteriores !== 'undefined' ? dadosAnteriores.telefone : '' %>">
          </div>

          <div class="campo">
            <label for="Email">Email:</label>
            <input type="text" id="Email" name="Email" placeholder="Email do professor" required
            value="<%= typeof dadosAnteriores !== 'undefined' ? dadosAnteriores.email : '' %>">
          </div>

          <div class="campo">
            <label for="Endereço">Endereço:</label>
            <input type="text" id="Endereço" name="Endereço" placeholder="Endereço do professor" required
            value="<%= typeof dadosAnteriores !== 'undefined' ? dadosAnteriores.endereço : '' %>">
          </div>

          <div class="campo">
            <label for="classificação">Classificação:</label>
            <select id="classificação" name="classificação" required
            value="<%= typeof dadosAnteriores !== 'undefined' ? dadosAnteriores.classificação : '' %>">
              <option value="" disabled selected>Selecione o tipo do trabalho</option>
              <option value="Mensal">Mensal</option>
              <option value="Diarista">Diarista</option>
              <option value="Horista">Horista</option>
              <option value="Semanal">Semanal</option>
            </select>
          </div>
          
          <button type="submit" class="link-cadastrar">Cadastrar professor</button>
        </form>
      </div>
    </div>
  </div>

  <div class="modal" id="confirmModal">
    <div class="modal-content">
      <p id="modalMessage"></p>
      <div class="modal-buttons">
        <button class="ok">Ok</button>
      </div>
    </div>
