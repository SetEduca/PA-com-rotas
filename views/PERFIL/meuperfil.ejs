<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Meu Perfil - Seteeduca</title>
  <link rel="stylesheet" href="perfil.css">
</head>
<style>
    * {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

body {
  font-family: Arial, sans-serif;
  display: flex;
  min-height: 100vh;
  overflow-x: hidden;
}

.sidebar {
  background-color: #fdf1cd;
  width: 65%;
  padding: 11px;
  display: flex;
  flex-direction: column;
}

.header {
  background-color: #f5e46a;
  padding: 20px 30px;
  font-weight: bold;
  font-size: 20px;
  border-bottom-left-radius: 50px;
  border-bottom-right-radius: 50px;
  text-align: center;
  margin-bottom: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.language-selector {
  position: absolute;
  right: 20px;
  top: 50%;
  transform: translateY(-50%);
}

.language-selector select {
  padding: 5px;
  border-radius: 5px;
  background-color: #fff;
  border: 1px solid #ccc;
  font-size: 14px;
  cursor: pointer;
}

.profile-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.profile-pic {
  width: 100px;
  height: 100px;
  border: 2px solid black;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 35px;
  position: relative;
  overflow: hidden;
  margin-bottom: 30px;
}

.profile-pic img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 50%;
}

.camera-icon {
  position: absolute;
  bottom: 5px;
  right: 5px;
  background-color: #000000;
  border-radius: 50%;
  padding: 5px;
  cursor: pointer;
  font-size: 16px;
  width: 25px;
  height: 25px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
}

.field {
  margin-top: 20px;
  width: 100%;
  max-width: 400px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
}

.label {
  font-weight: bold;
  margin-right: 10px;
  min-width: 60px;
}

.value {
  background-color: #ddd;
  border-radius: 20px;
  padding: 5px 15px;
  display: inline-block;
  flex-grow: 1;
  text-align: center;
  min-width: 200px;
}

.editable {
  min-height: 30px;
}

.editable:empty:before {
  content: attr(data-placeholder);
  color: #888;
  font-style: italic;
}

.value[contenteditable] {
  outline: 1px dashed #999;
}

.buttons-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30px;
  width: 100%;
  max-width: 400px;
  gap: 10px;
}

.change-password, .save-changes {
  border: none;
  border-radius: 10px;
  padding: 10px 20px;
  cursor: pointer;
  font-weight: bold;
  width: 100%;
  max-width: 200px;
  text-align: center;
}

.change-password {
  background-color: red;
  color: white;
  margin-top: 3vh;
  width: auto;
  

  
  
}

.save-changes {
  background-color: #4CAF50;
  color: white;
}

.logo-area {
  background-color: #e9f0ff;
  width: 35%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20px;
}

.logo-area img {
  max-width: 80%;
  max-height: 100px;
  object-fit: contain;
}

input[type="file"] {
  display: none;
}

/* Toast de notificação */
.toast {
  position: fixed;
  bottom: 20px;
  left: 50%;
  transform: translateX(-50%);
  background-color: #333;
  color: white;
  padding: 15px 25px;
  border-radius: 5px;
  display: none;
  opacity: 0;
  transition: opacity 0.3s;
  z-index: 1000;
}

.toast.show {
  display: block;
  opacity: 1;
}

/* Estilos responsivos */
@media (max-width: 768px) {
  body {
      flex-direction: column;
  }
  
  .sidebar, .logo-area {
      width: 100%;
  }
  
  .logo-area {
      order: -1;
      padding: 20px 0;
      min-height: 120px;
  }
  
  .profile-container {
      margin: 0;
      padding: 10px;
  }
  
  .field {
      flex-direction: column;
      align-items: flex-start;
  }
  
  .value {
      margin-left: 0;
      margin-top: 5px;
      width: 100%;
  }
  
  .header {
      border-radius: 0;
  }
  
  .language-selector {
      position: absolute;
      top: 10px;
      right: 10px;
      transform: none;
  }
}

@media (max-width: 480px) {
  .header {
      font-size: 18px;
      padding: 15px;
      position: relative;
  }
  
  .profile-pic {
      width: 80px;
      height: 80px;
  }
  
  .camera-icon {
      width: 20px;
      height: 20px;
      font-size: 12px;
  }
  

  
  .change-password, .save-changes {
      width: 100%;
  }
}
#caixa{
  position: relative;
  right: 4vh;
  justify-items: center;
  
  

}
</style>
<body>
  <div class="sidebar">
    <div class="header">Meu perfil</div>
    <div class="profile-container">
      <div class="profile-pic" id="profilePreview">
        <img src="/imagem/f918bc7ddb4658dcf4ce70a21b3fd31d.jpg" alt="Foto de perfil" id="profileImage">
        <label class="camera-icon" for="uploadPhoto">&#128247;</label>
        <input type="file" id="uploadPhoto" accept="image/*">
      </div>
      <div id="caixa">
      <div class="field">
        <span class="label">Nome:</span>
        <input class="value" id="nome" type="text" value="Nome">
      </div>
      
      <div class="field">
        <span class="label">Email:</span>
        <input class="value" id="email" type="email" value="@gmail.com">
      </div>
      
      <div class="field">
        <span class="label">Senha:</span>
        <input class="value" id="senha1" type="password" value="********">
      </div>
      
      <button class="change-password" onclick="alterarSenha()">Salvar Alterações</button>
    </div>
  </div>
</div>
  <div class="logo-area">
     <img src="/imagem/logo2.png" alt="Seteeduca Logo">>
  
</div>
  <script src="perfil.js"></script>
</body>
<script>
    // Espera que o DOM esteja completamente carregado
document.addEventListener('DOMContentLoaded', function() {
  // Verifica se há uma imagem salva no localStorage e a carrega
  const savedProfileImage = localStorage.getItem('profileImage');
  if (savedProfileImage) {
      document.getElementById('profileImage').src = savedProfileImage;
  }
  
  // Evento para alterar a foto de perfil
  document.getElementById('uploadPhoto').addEventListener('change', function(event) {
      const file = event.target.files[0];
      if (file) {
          const reader = new FileReader();
          reader.onload = function(e) {
              const profileImage = document.getElementById('profileImage');
              profileImage.src = e.target.result;
              
              // Salva a imagem no localStorage para persistência
              localStorage.setItem('profileImage', e.target.result);
          }
          reader.readAsDataURL(file);
      }
  });
  
  // Salva os dados do perfil quando editados
  const editableFields = document.querySelectorAll('[contenteditable="true"]');
  editableFields.forEach(field => {
      // Carrega dados salvos anteriormente
      const savedValue = localStorage.getItem(field.id);
      if (savedValue) {
          field.textContent = savedValue;
      }
      
      // Salva ao perder o foco
      field.addEventListener('blur', function() {
          localStorage.setItem(this.id, this.textContent);
      });
      
      // Salva ao pressionar Enter e remove o foco
      field.addEventListener('keydown', function(e) {
          if (e.key === 'Enter') {
              e.preventDefault();
              this.blur();
          }
      });
  });
});


function alterarSenha() {
  alert ("Suas informações foram alteradas com sucesso.");
};
</script>
</html>