    <div class="modal-overlay" id="password-modal-overlay">
        <div class="password-modal">
            <button class="close-modal">&times;</button>
            <div class="modal-header">
                <h3 class="modal-title">Alterar Senha</h3>
            </div>
            <form class="password-form">
                <div class="password-input-group">
                    <label for="current-password">Senha Atual:</label>
                    <input type="password" id="current-password" class="password-input" required>
                </div>
                <div class="password-input-group">
                    <label for="new-password">Nova Senha:</label>
                    <input type="password" id="new-password" class="password-input" required>
                </div>
                <div class="password-input-group">
                    <label for="confirm-password">Confirmar Nova Senha:</label>
                    <input type="password" id="confirm-password" class="password-input" required>
                </div>
                <div class="modal-buttons">
                    <button type="button" class="modal-cancel-btn">Cancelar</button>
                    <button type="submit" class="modal-save-btn">Salvar Nova Senha</button>
                </div>
            </form>
        </div>
    </div>
    
    <script>
        // Fun√ß√£o para alternar o dropdown do perfil
        function toggleDropdown(event) {
            const dropdown = document.getElementById('profile-dropdown-menu');
            dropdown.style.display = dropdown.style.display === 'block' ? 'none' : 'block';
            document.getElementById('profile-toggle').classList.toggle('active');
            event.stopPropagation();
        }

        document.addEventListener('click', (event) => {
            const profileToggle = document.getElementById('profile-toggle');
            const dropdownMenu = document.getElementById('profile-dropdown-menu');
            if (profileToggle && dropdownMenu && !profileToggle.contains(event.target) && dropdownMenu.style.display === 'block') {
                dropdownMenu.style.display = 'none';
                profileToggle.classList.remove('active');
            }
        });
        
        function navegarPara(rota) {
            if (rota === 'inicio') {
                window.location.href = '/inicio';
            } else if (rota === 'login') {
                window.location.href = '/login'; 
            } else {
                // Outras rotas
            }
        }

        // ----------------------------------------------------
        // L√ìGICA DE EDI√á√ÉO DO PERFIL (Nome da creche e E-mail)
        // ----------------------------------------------------

        function toggleEditMode(isEditing) {
            const fields = document.querySelectorAll('#creche, #email');
            const editBtn = document.querySelector('.edit-btn');
            const saveBtn = document.querySelector('.save-btn');

            fields.forEach(field => {
                field.readOnly = !isEditing;
            });

            if (isEditing) {
                editBtn.style.display = 'none';
                saveBtn.style.display = 'inline-block';
            } else {
                editBtn.style.display = 'inline-block';
                saveBtn.style.display = 'none';
            }
        }

        // 1. A√ß√£o do bot√£o "Editar" (Informa√ß√µes do Perfil)
        document.querySelector('.edit-btn').addEventListener('click', () => {
            toggleEditMode(true);
        });

        // 2. A√ß√£o do bot√£o "Salvar altera√ß√µes" (Informa√ß√µes do Perfil) - IMPLEMENTA√á√ÉO DO FETCH
        document.querySelector('.save-btn').addEventListener('click', async (e) => {
            // e.preventDefault(); 

            const nomeCreche = document.getElementById('creche').value;
            const email = document.getElementById('email').value;

            try {
                const response = await fetch('/meuperfil/info', {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ nome_creche: nomeCreche, email: email })
                });

                const result = await response.json();

                if (response.ok) {
                    alert(result.message || 'Perfil atualizado com sucesso!');
                    toggleEditMode(false);
                } else {
                    alert(`Erro ao salvar perfil: ${result.error || 'Verifique os dados e tente novamente.'}`);
                }
            } catch (error) {
                console.error('Erro na requisi√ß√£o de perfil:', error);
                alert('Erro de conex√£o com o servidor ao salvar o perfil.');
            }
        });

        // ----------------------------------------------------
        // L√ìGICA DO MODAL ALTERAR SENHA (Open/Close e Submission)
        // ----------------------------------------------------
        
        const passwordModalOverlay = document.getElementById('password-modal-overlay');

        // Abrir Modal
        document.querySelector('.change-password-btn').addEventListener('click', () => {
            if (passwordModalOverlay) {
                passwordModalOverlay.classList.add('show');
            }
        });

        // Fechar Modal (bot√£o Cancelar e X)
        document.querySelectorAll('#password-modal-overlay .close-modal, #password-modal-overlay .modal-cancel-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                passwordModalOverlay.classList.remove('show');
            });
        });

        // L√ìGICA DE ENVIO DE SENHA 
        const savePasswordBtn = document.querySelector('#password-modal-overlay .modal-save-btn'); 

        if (savePasswordBtn) {
            savePasswordBtn.addEventListener('click', async (e) => {
                e.preventDefault();

                const oldPassword = document.getElementById('current-password').value; 
                const newPassword = document.getElementById('new-password').value;     
                const confirmPassword = document.getElementById('confirm-password').value; 

                if (newPassword !== confirmPassword) {
                    alert('A nova senha e a confirma√ß√£o de senha n√£o coincidem.');
                    return;
                }
                
                if (!oldPassword || !newPassword || !confirmPassword) {
                    alert('Por favor, preencha todos os campos de senha.');
                    return;
                }

                try {
                    const response = await fetch('/meuperfil/senha', { 
                        method: 'PUT',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ 
                            senhaAntiga: oldPassword, 
                            senhaNova: newPassword 
                        })
                    });

                    const result = await response.json();

                    if (response.ok) {
                        alert(result.message || 'Senha alterada com sucesso!');
                        // Fechar o modal
                        passwordModalOverlay.classList.remove('show');
                        // Limpar campos
                        document.getElementById('current-password').value = ''; 
                        document.getElementById('new-password').value = '';
                        document.getElementById('confirm-password').value = '';
                    } else {
                        alert(`Erro ao alterar senha: ${result.error || 'Verifique as senhas e tente novamente.'}`);
                    }
                } catch (error) {
                    console.error('Erro na requisi√ß√£o de altera√ß√£o de senha:', error);
                    alert('Erro de conex√£o com o servidor ao tentar alterar a senha.');
                }
            });
        }


        // ----------------------------------------------------
        // L√ìGICA DE EDI√á√ÉO DO ENDERE√áO (Com Rua/Avenida Edit√°vel)
        // ----------------------------------------------------

        function toggleAddressEditMode(isEditing) {
            // Campos de endere√ßo (CEP, Rua/Avenida, Bairro, Cidade)
            const addressFields = document.querySelectorAll('#cep, #logradouro, #bairro, #cidade'); 
            const editAddressBtn = document.querySelector('.edit-address-btn');
            const saveAddressBtn = document.querySelector('.save-address');
            const clearAddressBtn = document.querySelector('.clear-address');
            const cepSearchBtn = document.getElementById('searchCep');

            addressFields.forEach(field => {
                // CORRIGIDO: Agora todos os campos, incluindo logradouro (Rua/Avenida), ficam edit√°veis.
                field.readOnly = !isEditing;
            });
            
            // Ajustar visibilidade e estado dos bot√µes
            if (isEditing) {
                editAddressBtn.style.display = 'none';
                saveAddressBtn.style.display = 'inline-block';
                clearAddressBtn.style.display = 'inline-block'; 
                cepSearchBtn.disabled = false;
            } else {
                editAddressBtn.style.display = 'inline-block';
                saveAddressBtn.style.display = 'none';
                clearAddressBtn.style.display = 'none';
                cepSearchBtn.disabled = true;
            }
        }

        // 3. A√ß√£o do bot√£o "Editar Endere√ßo"
        document.querySelector('.edit-address-btn').addEventListener('click', () => {
            toggleAddressEditMode(true);
        });

        // 4. A√ß√£o do bot√£o "Salvar Endere√ßo" - IMPLEMENTA√á√ÉO DO FETCH
        document.querySelector('.save-address').addEventListener('click', async (e) => {
            e.preventDefault();

            const cep = document.getElementById('cep').value.replace(/\D/g, '');
            const logradouro = document.getElementById('logradouro').value;
            const bairro = document.getElementById('bairro').value;
            const cidade = document.getElementById('cidade').value;
            
            if (!cep || !logradouro || !bairro || !cidade) {
                alert('Por favor, preencha todos os campos obrigat√≥rios do endere√ßo.');
                return;
            }
            
            try {
                const response = await fetch('/meuperfil/endereco', {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        cep: cep,
                        logradouro: logradouro,
                        bairro: bairro,
                        localidade: cidade, 
                        uf: 'XX' // Valor placeholder, deve ser obtido via API do CEP
                    })
                });

                const result = await response.json();

                if (response.ok) {
                    alert(result.message || 'Endere√ßo salvo com sucesso!');
                    toggleAddressEditMode(false);
                } else {
                    alert(`Erro ao salvar endere√ßo: ${result.error || 'Falha ao conectar com o servidor.'}`);
                }
            } catch (error) {
                console.error('Erro na requisi√ß√£o de endere√ßo:', error);
                alert('Erro de conex√£o ao salvar o endere√ßo.');
            }
        });

        // 5. A√ß√£o do bot√£o "Limpar" (Endere√ßo)
        document.querySelector('.clear-address').addEventListener('click', () => {
            document.getElementById('cep').value = '';
            document.getElementById('logradouro').value = '';
            document.getElementById('bairro').value = '';
            document.getElementById('cidade').value = '';
        });
        
        // 6. L√≥gica de busca de CEP (apenas simula√ß√£o)
        document.getElementById('searchCep').addEventListener('click', async () => {
            const cepField = document.getElementById('cep');
            const cep = cepField.value.replace(/\D/g, ''); 
            
            if (cep.length !== 8) {
                document.getElementById('cepError').classList.add('show');
                document.getElementById('cepError').textContent = 'CEP inv√°lido.';
                return;
            }
            
            document.getElementById('cepError').classList.remove('show');
            // Simula√ß√£o de preenchimento ap√≥s a busca
            document.getElementById('logradouro').value = 'Rua das Flores (Preenchido)';
            document.getElementById('bairro').value = 'Centro (Preenchido)';
            document.getElementById('cidade').value = 'Salvador (Preenchido)';
            
            alert(`CEP ${cep} buscado com sucesso!`);
        });

    </script>
