  <div class="main-content">
    <div class="header">
       <div class="header-title"><i class="fas fa-user-edit"></i><span>Editar <b>ALUNO</b></span></div>
    </div>

    <div class="content-area">
      <div class="caixa">
         <form action="/acessar-aluno/editar/<%= aluno.id %>" method="POST">
            
            <input type="hidden" name="foto_crianca" id="campoFotoBase64">
            <div class="photo-upload-section">
                <div class="photo-preview" id="photoPreview">
                    <% if(aluno.foto_crianca) { %>
                        <img src="<%= aluno.foto_crianca %>" alt="Foto Atual">
                    <% } else { %>
                        <i class="fas fa-camera" style="font-size: 24px; color: #ccc;"></i>
                    <% } %>
                </div>
                <button type="button" class="upload-btn" onclick="uploadPhoto()">Alterar Foto</button>
            </div>

            <h3 style="color: #306bc2; border-bottom: 1px solid #ddd; padding-bottom: 10px;">Informações Pessoais</h3>
            <div class="campo"><label>Nome Completo:</label><input type="text" name="nome" value="<%= aluno.nome || '' %>" required></div>
            <div style="display: flex; gap: 20px; flex-wrap: wrap;">
                <div class="campo" style="flex: 1;"><label>Data de Nascimento:</label><input type="date" name="dataNascimento" value="<%= aluno.data_nascimento || '' %>" required></div>
                <div class="campo" style="flex: 1;"><label>CPF:</label><input type="text" name="cpf" value="<%= aluno.cpf || '' %>"></div>
            </div>
            <div style="display: flex; gap: 20px; flex-wrap: wrap;">
                <div class="campo" style="flex: 1;">
                    <label>Sexo:</label>
                    <select name="sexo" required>
                        <% const sexo = aluno.sexo ? aluno.sexo.toLowerCase() : ''; %>
                        <option value="Masculino" <%= sexo === 'masculino' ? 'selected' : '' %>>Masculino</option>
                        <option value="Feminino" <%= sexo === 'feminino' ? 'selected' : '' %>>Feminino</option>
                    </select>
                </div>
                <div class="campo" style="flex: 1;"><label>Naturalidade:</label><input type="text" name="naturalidade" value="<%= aluno.naturalidade || '' %>" required></div>
            </div>

            <h3 style="color: #306bc2; border-bottom: 1px solid #ddd; padding-bottom: 10px; margin-top: 20px;">Responsável</h3>
            <div class="campo"><label>Nome do Responsável:</label><input type="text" name="responsavel" value="<%= aluno.responsavel ? aluno.responsavel.nome : '' %>" required></div>
            <div style="display: flex; gap: 20px; flex-wrap: wrap;">
                <div class="campo" style="flex: 1;"><label>CPF Responsável:</label><input type="text" name="cpf_responsavel" value="<%= aluno.responsavel ? aluno.responsavel.cpf : '' %>" required></div>
                <div class="campo" style="flex: 1;">
                    <label>Telefone:</label>
                    <% let tel = ''; 
                       if(aluno.responsavel && aluno.responsavel.tel_resp && aluno.responsavel.tel_resp.length > 0) { 
                           /* CORREÇÃO AQUI: Adicionadas crases */
                           tel = `(${aluno.responsavel.tel_resp[0].ddd}) ${aluno.responsavel.tel_resp[0].numero}`; 
                       } 
                    %>
                    <input type="text" name="telefone" value="<%= tel %>" required>
                </div>
            </div>
            <div class="campo"><label>Email:</label><input type="email" name="email" value="<%= aluno.responsavel ? aluno.responsavel.email : '' %>" required></div>

            <h3 style="color: #306bc2; border-bottom: 1px solid #ddd; padding-bottom: 10px; margin-top: 20px;">Endereço</h3>
            
            <% const end = (aluno.endereco_crianca && aluno.endereco_crianca.length > 0) ? aluno.endereco_crianca[0] : {}; %>
            
            <div style="display: flex; gap: 20px; flex-wrap: wrap;">
                <div class="campo" style="flex: 1;"><label>CEP:</label><input type="text" name="cep" value="<%= end.cep || '' %>" required></div>
                <div class="campo" style="flex: 2;"><label>Cidade:</label><input type="text" name="cidade" value="<%= end.cidade || '' %>" required></div>
                <div class="campo" style="flex: 1;"><label>Estado:</label><input type="text" name="estado" value="<%= end.estado || '' %>" required></div>
            </div>
            <div class="campo">
                <label>Logradouro:</label>
                <input type="text" name="logradouro" value="<%= end.rua || '' %>" required>
            </div>
            <div style="display: flex; gap: 20px; flex-wrap: wrap;">
                <div class="campo" style="flex: 1;"><label>Número:</label><input type="text" name="numero" value="<%= end.numero || '' %>" required></div>
                <div class="campo" style="flex: 2;"><label>Bairro:</label><input type="text" name="bairro" value="<%= end.bairro || '' %>" required></div>
            </div>

            <h3 style="color: #306bc2; border-bottom: 1px solid #ddd; padding-bottom: 10px; margin-top: 20px;">Saúde / Observações</h3>
            <% const saude = (aluno.saude_crianca && aluno.saude_crianca.length > 0) ? aluno.saude_crianca[0] : {}; %>
            <div class="campo"><label>Observações:</label>
            <textarea name="observacoes" rows="3"><%= saude.observacoes || '' %></textarea></div>
            
            <div style="display: flex; gap: 20px; flex-wrap: wrap;">
                 <div class="campo" style="flex: 1;"><label>Alergias:</label><input type="text" name="alergias" value="<%= saude.alergias || '' %>"></div>
                 <div class="campo" style="flex: 1;"><label>Deficiências:</label><input type="text" name="deficiencias" value="<%= saude.deficiencias || '' %>"></div>
            </div>

            <div class="button-container">
                <button type="submit" class="btn-action-form btn-save">Salvar alterações</button>
                <a href="/acessar-aluno" class="btn-action-form btn-cancel">Cancelar</a>
            </div>
        </form>
      </div>
    </div>
  </div>
  <script>
        document.querySelector('input[name="cpf"]').addEventListener('input', function() { let v = this.value.replace(/\D/g, ''); v = v.replace(/(\d{3})(\d)/, '$1.$2'); v = v.replace(/(\d{3})(\d)/, '$1.$2'); v = v.replace(/(\d{3})(\d{1,2})$/, '$1-$2'); this.value = v; });
        document.querySelector('input[name="cpf_responsavel"]').addEventListener('input', function() { let v = this.value.replace(/\D/g, ''); v = v.replace(/(\d{3})(\d)/, '$1.$2'); v = v.replace(/(\d{3})(\d)/, '$1.$2'); v = v.replace(/(\d{3})(\d{1,2})$/, '$1-$2'); this.value = v; });
        document.querySelector('input[name="telefone"]').addEventListener('input', function() { let v = this.value.replace(/\D/g, ''); v = v.replace(/(\d{2})(\d)/, '($1) $2'); v = v.replace(/(\d{5})(\d)/, '$1-$2'); this.value = v; });
        document.querySelector('input[name="cep"]').addEventListener('input', function() { let v = this.value.replace(/\D/g, ''); v = v.replace(/(\d{5})(\d)/, '$1-$2'); this.value = v; });

        // JS PARA UPLOAD DE FOTO (ADICIONADO)
        function uploadPhoto() {
            const input = document.createElement('input');
            input.type = 'file';
            input.accept = 'image/*';
            input.onchange = function(e) {
                const file = e.target.files[0];
                if (file) {
                    if (file.size > 2 * 1024 * 1024) { alert('Imagem muito grande (Max: 2MB).'); return; }
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        const preview = document.getElementById('photoPreview');
                        /* CORREÇÃO AQUI: Adicionadas crases */
                        preview.innerHTML = `<img src="${e.target.result}" alt="Foto Nova">`;
                        document.getElementById('campoFotoBase64').value = e.target.result;
                    };
                    reader.readAsDataURL(file);
                }
            };
            input.click();
        }
  </script>
</body>
