  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; }
    body { background-color: #e8e8e8; min-height: 100vh; display: flex; }
    .sidebar {
            width: 280px; 
            height: 100vh;
            /* Largura definida pela variável CSS */
            background: linear-gradient(180deg, #FFF4DF 0%, #f8f0e3 100%);
            /* Fundo com um gradiente suave */
            display: flex;
            /* Habilita o Flexbox para os itens internos */
            flex-direction: column;
            /* Organiza os itens em coluna (logo/menu em cima, footer embaixo) */
            justify-content: space-between;
            /* Distribui o espaço entre os itens */
            box-shadow: 2px 0 15px rgba(0, 0, 0, 0.1);
            /* Sombra sutil para dar profundidade */
            min-height: 100vh;
            /* Altura mínima de 100% da tela */
            flex-shrink: 0;
            /* Impede que a sidebar encolha se o conteúdo for muito grande */
            position: fixed;
            /* Fixa a sidebar na tela, para que não role com a página */
            left: 0;
            top: 0;
            z-index: 1000;

            a {
    text-decoration: none;
                }
            /* Posicionamento e ordem de sobreposição */
        }
    .logo { padding: 0px 40px; text-align: center; margin-bottom: 25px; margin-top: 30px; }
    .menu { flex: 0 0 auto; padding: 20px 18px;overflow: visible; flex-grow: 0 !important; height: auto !important; margin-bottom: 20px; height: auto;}
    .menu-item { padding: 30px 20px; margin-bottom: 6px; border-radius: 6px; cursor: pointer; transition: all 0.3s ease; position: relative; display: flex; align-items: center; font-weight: 500; color: black; }
    .menu-item i { margin-right: 15px; font-size: 18px; width: 24px; text-align: center; z-index: 2; }
    .menu-item span { z-index: 2; font-size: 15px; }
    .menu-item:hover { background-color: #6c757d21; }
    .menu-item::after { padding: 0 10px; content: ''; position: absolute; bottom: -3px; left: 20px; height: 2px; width: 0px; transition: width 0.3s ease; border-radius: 1px; }
    .menu-item:hover::after, .menu-item.active::after { width: calc(100% - 40px); }
    .menu-item:nth-child(2)::after { background-color: #306bc2; }
    .menu-item.active { background-color: rgba(128, 128, 128, 0.356); color: #333; font-weight: 600; }
    .menu-item.active::before {
            content: '';
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background-color: currentColor;
            z-index: 2;
        }
     .menu-item:nth-child(1)::after { background-color: #F4BF27; }
        .menu-item:nth-child(2)::after { background-color: #306bc2; }
        .menu-item:nth-child(3)::after { background-color: #9747FF; }
        .menu-item:nth-child(4)::after { background-color: #F88C12; }
        .menu-item:nth-child(5)::after { background-color: #D22A2A; }
        .menu-item:nth-child(6)::after { background-color: #59C631; }
     .sidebar-footer {
            padding: 20px 18px;
            border-top: 1px solid rgba(0, 0, 0, 0.1);
        
}
    .logout-button { padding: 16px 20px; border-radius: 8px; cursor: pointer; transition: all 0.3s ease; display: flex; align-items: center; font-weight: 500; color: #333; width: 100%; gap: 15px; padding-left: 20px; color: inherit; text-decoration: none; cursor: pointer;  }
    .logout-button:hover { background-color: rgba(210, 42, 42, 0.1); color: #ef7215; font-weight: 600; }
    .main-content { flex: 1; min-height: 100vh; display: flex; flex-direction: column; }
    .header { background: #306bc2; height: 80px; display: flex; align-items: center; justify-content: space-between; padding: 0 30px; color: white; width: 100%; }
    .header-title { display: flex; align-items: center; gap: 10px; font-size: 1.5rem; color: white; font-family: 'Kodchasan', sans-serif; }
    .content-area { padding: 30px; background: #fcf8f2; flex: 1; display: flex; justify-content: center; align-items: flex-start; width: 100%; }
    .caixa { width: 90%; max-width: 800px; background-color: #fff; border-radius: 12px; box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1); padding: 40px; margin-top: 20px; border-top: 5px solid #306bc2; }
    form { display: flex; flex-direction: column; gap: 20px; width: 100%; }
    .campo { display: flex; flex-direction: column; gap: 8px; width: 100%; }
    label { font-weight: 600; font-size: 1.1rem; color: #333; margin-left: 10px; }
    input, select, textarea { padding: 14px 18px; border: 2px solid #ddd; border-radius: 8px; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size: 1rem; width: 100%; background-color: #fff; transition: all 0.3s; }
    input:focus { border-color: #306bc2; outline: none; }
    .button-container { display: flex; gap: 15px; justify-content: center; margin-top: 20px; }
    .btn-action-form { width: 180px; height: 55px; border: none; border-radius: 8px; font-weight: 600; cursor: pointer; color: white; }
    .btn-save { background-color: #28a745; }
    .btn-cancel { background-color: #6c757d; text-decoration: none; display: flex; align-items: center; justify-content: center; }
    
    /* CSS NOVO PARA FOTO */
    .photo-upload-section { text-align: center; padding: 20px; margin-bottom: 20px; border: 2px dashed #ddd; border-radius: 10px; }
    .photo-preview { width: 100px; height: 100px; border-radius: 50%; background: #f0f0f0; margin: 0 auto 10px; display: flex; align-items: center; justify-content: center; overflow: hidden; }
    .photo-preview img { width: 100%; height: 100%; object-fit: cover; }
    .upload-btn { padding: 8px 15px; background: #306bc2; color: white; border: none; border-radius: 5px; cursor: pointer; }
    /* --- RESPONSIVIDADE DA SIDEBAR (Adicione ao final do seu CSS) --- */
@media (max-width: 768px) {
    /* 1. Reduz a largura da barra */
    .sidebar {
        width: 70px;
        display: flex; /* Força ela a aparecer (antes estava 'none') */
    }

    /* 2. Esconde os textos (Nome dos menus e Sair) */
    .menu-item span, 
    .logout-button span {
        display: none;
    }

    /* 3. Centraliza os ícones */
    .menu-item, 
    .logout-button {
        justify-content: center; /* Centraliza o conteúdo horizontalmente */
        padding: 20px 0;         /* Ajusta o espaço vertical */
    }

    .menu-item i, 
    .logout-button i {
        margin-right: 0;         /* Remove o espaço à direita do ícone */
    }

    /* 4. Ajusta o tamanho da Logo para caber na barra fina */
    .logo {
        padding: 0 5px;
        margin-top: 20px;
    }
    .logo img {
        max-width: 40px; /* Logo pequena */
    }

    /* 5. Ajustes visuais finos (bolinha e linhas) */
    .menu-item::after { display: none; } /* Remove as linhas coloridas embaixo */
    
    .menu-item.active::before {
        right: 5px; /* Ajusta a posição da bolinha de ativo */
    }

    .sidebar-footer {
        padding: 10px 5px;
    }

    /* 6. Ajuste IMPORTANTE do conteúdo principal */
    /* Se a barra diminuiu, o conteúdo tem que voltar um pouco para a esquerda */
    .main-content {
        margin-left: 70px; /* Mesma largura da sidebar pequena */
        width: calc(100% - 70px);
    }
}

/* Ajuste para celulares muito pequenos (Opcional) */
@media (max-width: 480px) {
    .main-content {
        margin-left: 0; /* Em telas muito pequenas, talvez seja melhor esconder a barra ou jogar o conteúdo por cima */
        width: 100%;
    }
    .sidebar {
        display: none; /* Oculta a barra em celulares minúsculos se preferir */
    }
}
  </style>
