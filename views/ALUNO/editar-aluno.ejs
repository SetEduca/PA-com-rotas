<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Seteeduca - Editar Aluno</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Allerta&family=Kodchasan:wght@400;500;700&display=swap" rel="stylesheet" />
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; }
    body { background-color: #e8e8e8; min-height: 100vh; display: flex; }
    .sidebar { width: 280px; background: linear-gradient(180deg, #FFF4DF 0%, #f8f0e3 100%); display: flex; flex-direction: column; justify-content: space-between; box-shadow: 2px 0 15px rgba(0, 0, 0, 0.1); min-height: 100vh; flex-shrink: 0; }
    .logo { padding: 0px 40px; text-align: center; margin-bottom: 25px; margin-top: 30px; }
    .menu { flex: 1; padding: 20px 18px; overflow-y: auto; }
    .menu-item { padding: 30px 20px; margin-bottom: 6px; border-radius: 6px; cursor: pointer; transition: all 0.3s ease; position: relative; display: flex; align-items: center; font-weight: 500; color: black; }
    .menu-item i { margin-right: 15px; font-size: 18px; width: 24px; text-align: center; z-index: 2; }
    .menu-item span { z-index: 2; font-size: 15px; }
    .menu-item:hover { background-color: #6c757d21; }
    .menu-item::after { padding: 0 10px; content: ''; position: absolute; bottom: -3px; left: 20px; height: 2px; width: 0px; transition: width 0.3s ease; border-radius: 1px; }
    .menu-item:hover::after, .menu-item.active::after { width: calc(100% - 40px); }
    .menu-item:nth-child(2)::after { background-color: #306bc2; }
    .menu-item.active { background-color: rgba(128, 128, 128, 0.356); color: #333; font-weight: 600; }
    .sidebar-footer { padding: 20px 18px; border-top: 1px solid rgba(0, 0, 0, 0.1); }
    .logout-button { padding: 16px 20px; border-radius: 8px; cursor: pointer; transition: all 0.3s ease; display: flex; align-items: center; font-weight: 500; color: #333; width: 100%; }
    .logout-button:hover { background-color: rgba(210, 42, 42, 0.1); color: #ef7215; font-weight: 600; }
    .main-content { flex: 1; min-height: 100vh; display: flex; flex-direction: column; }
    .header { background: #306bc2; height: 80px; display: flex; align-items: center; justify-content: space-between; padding: 0 30px; color: white; width: 100%; }
    .header-title { display: flex; align-items: center; gap: 10px; font-size: 1.5rem; color: white; font-family: 'Kodchasan', sans-serif; }
    .content-area { padding: 30px; background: #fcf8f2; flex: 1; display: flex; justify-content: center; align-items: flex-start; width: 100%; }
    .caixa { width: 90%; max-width: 800px; background-color: #fff; border-radius: 12px; box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1); padding: 40px; margin-top: 20px; border-top: 5px solid #306bc2; }
    form { display: flex; flex-direction: column; gap: 20px; width: 100%; }
    .campo { display: flex; flex-direction: column; gap: 8px; width: 100%; }
    label { font-weight: 600; font-size: 1.1rem; color: #333; margin-left: 10px; }
    input, select, textarea { padding: 14px 18px; border: 2px solid #ddd; border-radius: 8px; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size: 1rem; width: 100%; background-color: #fff; transition: all 0.3s; }
    input:focus { border-color: #306bc2; outline: none; }
    .button-container { display: flex; gap: 15px; justify-content: center; margin-top: 20px; }
    .btn-action-form { width: 180px; height: 55px; border: none; border-radius: 8px; font-weight: 600; cursor: pointer; color: white; }
    .btn-save { background-color: #28a745; }
    .btn-cancel { background-color: #6c757d; text-decoration: none; display: flex; align-items: center; justify-content: center; }
    
    /* CSS NOVO PARA FOTO */
    .photo-upload-section { text-align: center; padding: 20px; margin-bottom: 20px; border: 2px dashed #ddd; border-radius: 10px; }
    .photo-preview { width: 100px; height: 100px; border-radius: 50%; background: #f0f0f0; margin: 0 auto 10px; display: flex; align-items: center; justify-content: center; overflow: hidden; }
    .photo-preview img { width: 100%; height: 100%; object-fit: cover; }
    .upload-btn { padding: 8px 15px; background: #306bc2; color: white; border: none; border-radius: 5px; cursor: pointer; }
    @media (max-width: 768px) { .sidebar { display: none; } .main-content { margin-left: 0; } }
  </style>
</head>
<body>
  <div class="sidebar">
    <div class="logo"><img src="imagem/logo.png" alt="logo"></div>
    <div class="menu">
        <div class="menu-item" onclick="window.location.href='/home'"><i class="fas fa-home"></i><span>INÍCIO</span></div>
        <div class="menu-item active" onclick="window.location.href='/acessar-aluno'"><i class="fas fa-address-card"></i><span>CADASTRO</span></div>
        <div class="menu-item" onclick="window.location.href='/matricula'"><i class="fas fa-user-graduate"></i><span>MATRÍCULA</span></div>
        <div class="menu-item" onclick="window.location.href='/professores'"><i class="fas fa-chalkboard-teacher"></i><span>PROFESSOR</span></div>
        <div class="menu-item" onclick="window.location.href='/turmas'"><i class="fas fa-users"></i><span>TURMA</span></div>
        <div class="menu-item" onclick="window.location.href='/financeiro'"><i class="fas fa-dollar-sign"></i><span>FINANCEIRO</span></div>
    </div>
    <div class="sidebar-footer"><div class="logout-button" onclick="window.location.href='/login'"><i class="fa-solid fa-right-from-bracket"></i><span>Sair</span></div></div>
  </div>

  <div class="main-content">
    <div class="header">
       <div class="header-title"><i class="fas fa-user-edit"></i><span>Editar <b>ALUNO</b></span></div>
    </div>

    <div class="content-area">
      <div class="caixa">
         <form action="/acessar-aluno/editar/<%= aluno.id %>" method="POST">
            
            <input type="hidden" name="foto_crianca" id="campoFotoBase64">
            <div class="photo-upload-section">
                <div class="photo-preview" id="photoPreview">
                    <% if(aluno.foto_crianca) { %>
                        <img src="<%= aluno.foto_crianca %>" alt="Foto Atual">
                    <% } else { %>
                        <i class="fas fa-camera" style="font-size: 24px; color: #ccc;"></i>
                    <% } %>
                </div>
                <button type="button" class="upload-btn" onclick="uploadPhoto()">Alterar Foto</button>
            </div>

            <h3 style="color: #306bc2; border-bottom: 1px solid #ddd; padding-bottom: 10px;">Informações Pessoais</h3>
            <div class="campo"><label>Nome Completo:</label><input type="text" name="nome" value="<%= aluno.nome || '' %>" required></div>
            <div style="display: flex; gap: 20px; flex-wrap: wrap;">
                <div class="campo" style="flex: 1;"><label>Data de Nascimento:</label><input type="date" name="dataNascimento" value="<%= aluno.data_nascimento || '' %>" required></div>
                <div class="campo" style="flex: 1;"><label>CPF:</label><input type="text" name="cpf" value="<%= aluno.cpf || '' %>"></div>
            </div>
            <div style="display: flex; gap: 20px; flex-wrap: wrap;">
                <div class="campo" style="flex: 1;">
                    <label>Sexo:</label>
                    <select name="sexo" required>
                        <% const sexo = aluno.sexo ? aluno.sexo.toLowerCase() : ''; %>
                        <option value="Masculino" <%= sexo === 'masculino' ? 'selected' : '' %>>Masculino</option>
                        <option value="Feminino" <%= sexo === 'feminino' ? 'selected' : '' %>>Feminino</option>
                    </select>
                </div>
                <div class="campo" style="flex: 1;"><label>Naturalidade:</label><input type="text" name="naturalidade" value="<%= aluno.naturalidade || '' %>" required></div>
            </div>

            <h3 style="color: #306bc2; border-bottom: 1px solid #ddd; padding-bottom: 10px; margin-top: 20px;">Responsável</h3>
            <div class="campo"><label>Nome do Responsável:</label><input type="text" name="responsavel" value="<%= aluno.responsavel ? aluno.responsavel.nome : '' %>" required></div>
            <div style="display: flex; gap: 20px; flex-wrap: wrap;">
                <div class="campo" style="flex: 1;"><label>CPF Responsável:</label><input type="text" name="cpf_responsavel" value="<%= aluno.responsavel ? aluno.responsavel.cpf : '' %>" required></div>
                <div class="campo" style="flex: 1;">
                    <label>Telefone:</label>
                    <% let tel = ''; 
                       if(aluno.responsavel && aluno.responsavel.tel_resp && aluno.responsavel.tel_resp.length > 0) { 
                           /* CORREÇÃO AQUI: Adicionadas crases */
                           tel = `(${aluno.responsavel.tel_resp[0].ddd}) ${aluno.responsavel.tel_resp[0].numero}`; 
                       } 
                    %>
                    <input type="text" name="telefone" value="<%= tel %>" required>
                </div>
            </div>
            <div class="campo"><label>Email:</label><input type="email" name="email" value="<%= aluno.responsavel ? aluno.responsavel.email : '' %>" required></div>

            <h3 style="color: #306bc2; border-bottom: 1px solid #ddd; padding-bottom: 10px; margin-top: 20px;">Endereço</h3>
            
            <% const end = (aluno.endereco_crianca && aluno.endereco_crianca.length > 0) ? aluno.endereco_crianca[0] : {}; %>
            
            <div style="display: flex; gap: 20px; flex-wrap: wrap;">
                <div class="campo" style="flex: 1;"><label>CEP:</label><input type="text" name="cep" value="<%= end.cep || '' %>" required></div>
                <div class="campo" style="flex: 2;"><label>Cidade:</label><input type="text" name="cidade" value="<%= end.cidade || '' %>" required></div>
                <div class="campo" style="flex: 1;"><label>Estado:</label><input type="text" name="estado" value="<%= end.estado || '' %>" required></div>
            </div>
            <div class="campo">
                <label>Logradouro:</label>
                <input type="text" name="logradouro" value="<%= end.rua || '' %>" required>
            </div>
            <div style="display: flex; gap: 20px; flex-wrap: wrap;">
                <div class="campo" style="flex: 1;"><label>Número:</label><input type="text" name="numero" value="<%= end.numero || '' %>" required></div>
                <div class="campo" style="flex: 2;"><label>Bairro:</label><input type="text" name="bairro" value="<%= end.bairro || '' %>" required></div>
            </div>

            <h3 style="color: #306bc2; border-bottom: 1px solid #ddd; padding-bottom: 10px; margin-top: 20px;">Saúde / Observações</h3>
            <% const saude = (aluno.saude_crianca && aluno.saude_crianca.length > 0) ? aluno.saude_crianca[0] : {}; %>
            <div class="campo"><label>Observações:</label>
            <textarea name="observacoes" rows="3"><%= saude.observacoes || '' %></textarea></div>
            
            <div style="display: flex; gap: 20px; flex-wrap: wrap;">
                 <div class="campo" style="flex: 1;"><label>Alergias:</label><input type="text" name="alergias" value="<%= saude.alergias || '' %>"></div>
                 <div class="campo" style="flex: 1;"><label>Deficiências:</label><input type="text" name="deficiencias" value="<%= saude.deficiencias || '' %>"></div>
            </div>

            <div class="button-container">
                <button type="submit" class="btn-action-form btn-save">Salvar alterações</button>
                <a href="/acessar-aluno" class="btn-action-form btn-cancel">Cancelar</a>
            </div>
        </form>
      </div>
    </div>
  </div>
  <script>
        document.querySelector('input[name="cpf"]').addEventListener('input', function() { let v = this.value.replace(/\D/g, ''); v = v.replace(/(\d{3})(\d)/, '$1.$2'); v = v.replace(/(\d{3})(\d)/, '$1.$2'); v = v.replace(/(\d{3})(\d{1,2})$/, '$1-$2'); this.value = v; });
        document.querySelector('input[name="cpf_responsavel"]').addEventListener('input', function() { let v = this.value.replace(/\D/g, ''); v = v.replace(/(\d{3})(\d)/, '$1.$2'); v = v.replace(/(\d{3})(\d)/, '$1.$2'); v = v.replace(/(\d{3})(\d{1,2})$/, '$1-$2'); this.value = v; });
        document.querySelector('input[name="telefone"]').addEventListener('input', function() { let v = this.value.replace(/\D/g, ''); v = v.replace(/(\d{2})(\d)/, '($1) $2'); v = v.replace(/(\d{5})(\d)/, '$1-$2'); this.value = v; });
        document.querySelector('input[name="cep"]').addEventListener('input', function() { let v = this.value.replace(/\D/g, ''); v = v.replace(/(\d{5})(\d)/, '$1-$2'); this.value = v; });

        // JS PARA UPLOAD DE FOTO (ADICIONADO)
        function uploadPhoto() {
            const input = document.createElement('input');
            input.type = 'file';
            input.accept = 'image/*';
            input.onchange = function(e) {
                const file = e.target.files[0];
                if (file) {
                    if (file.size > 2 * 1024 * 1024) { alert('Imagem muito grande (Max: 2MB).'); return; }
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        const preview = document.getElementById('photoPreview');
                        /* CORREÇÃO AQUI: Adicionadas crases */
                        preview.innerHTML = `<img src="${e.target.result}" alt="Foto Nova">`;
                        document.getElementById('campoFotoBase64').value = e.target.result;
                    };
                    reader.readAsDataURL(file);
                }
            };
            input.click();
        }
  </script>
</body>
</html>