  <script>
    // --- CONFIGURAÇÕES GLOBAIS ---
    const API_URL = ''; // Deixe vazio se estiver rodando localmente

    // =================================================================
    // 1. FUNÇÕES AUXILIARES (Carregar Alunos, Formatar Moeda)
    // =================================================================

    // Função para preencher o Select de Alunos (Agora blindada no window)
    window.popularAlunosNoModal = async function() {
        const select = document.getElementById('customerId');
        if (!select) return;
        
        // Se já tiver opções (além da padrão), não carrega de novo
        if (select.options.length > 1) return;

        try {
            const res = await fetch(API_URL + '/api/alunos');
            if (!res.ok) throw new Error('Erro ao buscar alunos');
            
            const alunos = await res.json();
            
            // Limpa e adiciona opção padrão
            select.innerHTML = '<option value="" disabled selected>Selecione...</option>';
            
            // Adiciona os alunos
            alunos.forEach(a => {
                const option = document.createElement('option');
                option.value = a.id;
                option.text = a.studentName || a.nome || 'Sem Nome';
                select.appendChild(option);
            });
        } catch (e) {
            console.error("Erro ao popular alunos:", e);
            select.innerHTML = '<option value="">Erro ao carregar</option>';
        }
    };

    // =================================================================
    // 2. FUNÇÕES DO MODAL (Abrir, Fechar, Salvar)
    // =================================================================

    window.abrirModalReceita = function() {
        console.log("Abrindo modal...");
        const modal = document.getElementById('nova-receita-modal');
        if (modal) {
            modal.classList.remove('hidden');
            modal.classList.add('flex');
            
            // Chama a função de popular alunos
            window.popularAlunosNoModal(); 
        } else {
            alert("Erro: Modal não encontrado no HTML.");
        }
    };

    window.fecharModal = function() {
        const modal = document.getElementById('nova-receita-modal');
        if (modal) {
            modal.classList.add('hidden');
            modal.classList.remove('flex');
        }
    };

    // Lógica de Salvar o Formulário
    document.addEventListener('DOMContentLoaded', () => {

    // --- LÓGICA DO CALENDÁRIO (DATA ATUAL) ---
    const dateElement = document.getElementById('current-date');
    if (dateElement) {
        const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
        const today = new Date();
        
        // Formata para "Sexta-feira, 22 de Novembro de 2025"
        let dateString = today.toLocaleDateString('pt-BR', options);
        
        // Deixa a primeira letra Maiúscula (opcional, fica mais bonito)
        dateString = dateString.charAt(0).toUpperCase() + dateString.slice(1);
        
        dateElement.innerText = dateString;
    }

        // --- LÓGICA PARA PREENCHER AS CATEGORIAS ---
    const tipoSelect = document.getElementById('transaction-type');
    const categoriaSelect = document.getElementById('category');

    const opcoesReceita = [
        { valor: 'Mensalidade', texto: 'Mensalidade' },
        { valor: 'Matrícula', texto: 'Matrícula' },
        { valor: 'Material Didático', texto: 'Material Didático' },
    ];

    const opcoesDespesa = [
        { valor: 'Energia Elétrica', texto: 'Energia Elétrica' },
        { valor: 'Água', texto: 'Água' },
        { valor: 'Internet', texto: 'Internet' },
        { valor: 'Aluguel', texto: 'Aluguel' },
        { valor: 'Salário', texto: 'Salário' },
        { valor: 'Manutenção', texto: 'Manutenção' },
        { valor: 'Alimentação', texto: 'Alimentação' }
    ];

    function atualizarCategorias() {
        const tipo = tipoSelect.value; 
        const lista = (tipo === 'Receita') ? opcoesReceita : opcoesDespesa;

        categoriaSelect.innerHTML = ''; // Limpa
        lista.forEach(op => {
            const option = document.createElement('option');
            option.value = op.valor;
            option.text = op.texto;
            categoriaSelect.appendChild(option);
        });
        
        // Esconde/Mostra campo de aluno
        const divAluno = document.getElementById('customer-field');
        if(divAluno) divAluno.style.display = (tipo === 'Despesa') ? 'none' : 'block';
    }

    // Ativa a mudança
    if (tipoSelect) {
        tipoSelect.addEventListener('change', atualizarCategorias);
        atualizarCategorias(); // Roda uma vez ao iniciar
    }
        const form = document.getElementById('add-revenue-form');
        if (form) {
            form.addEventListener('submit', async (e) => {
                e.preventDefault();
                
                const formData = new FormData(e.target);
                const dados = Object.fromEntries(formData.entries());
                
                const payload = {
                    tipo: dados['transaction-type'],
                    valor: parseFloat(dados.value),
                    data: dados.date,
                    descricao: dados.description,
                    categoria: dados.category,
                    alunoId: dados.customerId || null
                };

                try {
                    const res = await fetch(API_URL + '/api/transacoes', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });

                    if (res.ok) {
                        alert("Salvo com sucesso!");
                        window.fecharModal();
                        e.target.reset();
                        
                        // Atualiza a tabela se estiver na aba de relatórios
                        if (document.getElementById('relatorios-section').style.display === 'block') {
                            window.carregarTabelaFinanceira('ativo');
                        }
                    } else {
                        const err = await res.json();
                        alert("Erro ao salvar: " + err.message);
                    }
                } catch (err) {
                    console.error(err);
                    alert("Erro de conexão.");
                }
            });
        }

        // Botões de fechar modal
        document.getElementById('close-nova-receita-modal')?.addEventListener('click', window.fecharModal);
        document.getElementById('cancel-nova-receita-modal')?.addEventListener('click', window.fecharModal);
        
        // Esconder campo de aluno se for Despesa
        document.getElementById('transaction-type')?.addEventListener('change', function(e) {
            const divAluno = document.getElementById('customer-field');
            if(divAluno) divAluno.style.display = (e.target.value === 'Despesa') ? 'none' : 'block';
        });
    });

    // =================================================================
    // 3. NAVEGAÇÃO E ABAS (RenderContent)
    // =================================================================

    window.renderContent = async function(tabId) {
        // 1. Esconde tudo
        ['dashboard-section', 'alunos-section', 'relatorios-section'].forEach(id => {
            const el = document.getElementById(id);
            if (el) el.style.display = 'none';
        });

        // 2. Tira classe active das abas
        document.querySelectorAll('.nav-tab').forEach(t => t.classList.remove('active'));
        const btn = document.getElementById(tabId);
        if (btn) btn.classList.add('active');

        // 3. Mostra a seção certa
       if (tabId === 'btn-dashboard') {
            const sec = document.getElementById('dashboard-section');
            if (sec) sec.style.display = 'block';

            // --- A PEÇA QUE FALTAVA ---
            // Chama a função que atualiza os cards (Saldo, Receitas, Despesas)
            if (typeof window.carregarDashboard === 'function') {
                window.carregarDashboard(); 
            }
        
        } else if (tabId === 'btn-alunos') {
            // ... resto do código ...
            const sec = document.getElementById('alunos-section');
            if (sec) sec.style.display = 'block';
            window.carregarTabelaAlunos(); // Carrega alunos

        } else if (tabId === 'btn-relatorios') {
            const sec = document.getElementById('relatorios-section');
            if (sec) {
                sec.style.display = 'block';
                document.getElementById('titulo-relatorio').innerText = 'Relatórios Ativos';
                const btnAdd = document.getElementById('btn-novo-lancamento');
                if (btnAdd) btnAdd.style.display = 'flex';
                
                window.carregarTabelaFinanceira('ativo');
            }

        } else if (tabId === 'btn-historico') {
            const sec = document.getElementById('relatorios-section');
            if (sec) {
                sec.style.display = 'block';
                document.getElementById('titulo-relatorio').innerText = 'Histórico de Arquivados';
                const btnAdd = document.getElementById('btn-novo-lancamento');
                if (btnAdd) btnAdd.style.display = 'none';
                
                window.carregarTabelaFinanceira('historico');
            }
        }
    };

    // =================================================================
    // 4. CARREGAMENTO DE DADOS (Tabelas)
    // =================================================================

    // Tabela Financeira (Ativos e Histórico)
    window.carregarTabelaFinanceira = async function(modo) {
        const tbody = document.getElementById('tabela-relatorios-body');
        if (!tbody) return;

        tbody.innerHTML = '<tr><td colspan="6" class="p-4 text-center">Carregando...</td></tr>';

        try {
            const endpoint = (modo === 'ativo') ? '/api/transacoes' : '/api/transacoes/historico';
            const res = await fetch(API_URL + endpoint);
            const dados = await res.json();

            tbody.innerHTML = '';
            if (!dados || dados.length === 0) {
                tbody.innerHTML = `<tr><td colspan="6" class="p-4 text-center text-gray-500">Nenhum registro.</td></tr>`;
                return;
            }

            tbody.innerHTML = dados.map(item => {
                const isReceita = item.type === 'Receita';
                const corValor = isReceita ? 'text-green-600' : 'text-red-600';
                const valorF = new Intl.NumberFormat('pt-BR', { style: 'currency', currency: 'BRL' }).format(Math.abs(item.value));
                const dataF = new Date(item.date).toLocaleDateString('pt-BR', { timeZone: 'UTC' });

                let acaoHtml = '';
                if (modo === 'ativo') {
                    if (item.type === 'Despesa') {
                        acaoHtml = `<button onclick="window.arquivarItem('${item.id}')" class="text-red-500 border border-red-200 px-2 py-1 rounded hover:bg-red-50 text-xs font-semibold">Arquivar</button>`;
                    } else {
                        const corSt = item.status === 'pago' ? 'text-green-600 bg-green-50' : 'text-yellow-600 bg-yellow-50';
                        acaoHtml = `<span class="${corSt} px-2 py-1 rounded text-xs font-bold uppercase">${item.status}</span>`;
                    }
                } else {
                    acaoHtml = `<span class="text-gray-400 text-xs italic">Arquivado</span>`;
                }

                return `
                    <tr class="hover:bg-gray-50 border-b border-gray-100">
                        <td class="p-3 text-sm text-gray-600">${dataF}</td>
                        <td class="p-3 text-sm font-medium text-gray-800">${item.description}</td>
                        <td class="p-3 text-sm text-gray-500">${item.category || '-'}</td>
                        <td class="p-3 text-sm font-bold ${corValor}">${valorF}</td>
                        <td class="p-3 text-sm">${item.type}</td>
                        <td class="p-3 text-center">${acaoHtml}</td>
                    </tr>`;
            }).join('');
        } catch (e) {
            console.error(e);
            tbody.innerHTML = '<tr><td colspan="6" class="p-4 text-center text-red-500">Erro de conexão.</td></tr>';
        }
    };

    // Tabela de Situação dos Alunos
    window.carregarTabelaAlunos = async function() {
        const tbody = document.getElementById('tabela-alunos-body');
        if (!tbody) return;

        // MUDANÇA 1: Colspan agora é 3 (eram 4 colunas, tiramos 1)
        tbody.innerHTML = '<tr><td colspan="3" class="p-4 text-center">Consultando...</td></tr>';

        try {
            const res = await fetch(API_URL + '/api/alunos-status');
            const alunos = await res.json();

            tbody.innerHTML = '';
            
            if (alunos.length === 0) {
                // MUDANÇA 2: Colspan 3 aqui também
                tbody.innerHTML = '<tr><td colspan="3" class="p-4 text-center">Nenhum aluno encontrado.</td></tr>';
                return;
            }

            tbody.innerHTML = alunos.map(a => {
                let corBadge = '';
                if (a.cor === 'green') corBadge = 'bg-green-100 text-green-800';
                else if (a.cor === 'red') corBadge = 'bg-red-100 text-red-800';
                else if (a.cor === 'yellow') corBadge = 'bg-yellow-100 text-yellow-800';
                else corBadge = 'bg-gray-100 text-gray-800';
                
                return `
                    <tr class="hover:bg-gray-50 border-b border-gray-100 transition">
                        <td class="p-3 text-sm font-medium text-gray-800">${a.nome}</td>
                        <td class="p-3 text-sm text-gray-600">${a.responsavel}</td>
                        
                        <td class="p-3 text-center">
                            <span class="px-2 py-1 rounded-full text-xs font-bold uppercase ${corBadge}">
                                ${a.status}
                            </span>
                        </td>
                    </tr>`;
            }).join('');
            
        } catch (e) {
            console.error(e);
            // MUDANÇA 3: Colspan 3 aqui também
            tbody.innerHTML = '<tr><td colspan="3" class="p-4 text-center text-red-500">Erro ao buscar alunos.</td></tr>';
        }
    };
    // Função de Arquivar
    window.arquivarItem = async function(id) {
        if (!confirm("Arquivar esta despesa?")) return;
        try {
            const res = await fetch(API_URL + `/api/transacoes/${id}/arquivar`, { method: 'PUT' });
            if (res.ok) {
                window.carregarTabelaFinanceira('ativo');
                alert("Arquivado!");
            } else {
                alert("Erro ao arquivar.");
            }
        } catch (e) {
            alert("Erro de conexão.");
        }
    };

   // =================================================================
    // 5. VARIÁVEIS GLOBAIS E FUNÇÕES (Dashboard + Gráficos)
    // =================================================================
    
    let chartPizza = null;
    let chartBarras = null;

    window.carregarDashboard = async function() {
        try {
            // 1. BUSCA DADOS
            const res = await fetch(API_URL + '/api/dashboard-resumo');
            const dados = await res.json();

            // 2. ATUALIZA TEXTOS (Números)
            const formatar = (val) => new Intl.NumberFormat('pt-BR', { style: 'currency', currency: 'BRL' }).format(val);

            // Tenta achar os IDs (Tanto o antigo quanto o novo, pra garantir)
            const elSaldo = document.getElementById('saldo-atual') || document.getElementById('saldo-total');
            const elRec = document.getElementById('receitas-mes') || document.getElementById('receitas-total');
            const elDesp = document.getElementById('despesas-mes') || document.getElementById('despesas-total');

            if (elSaldo) elSaldo.innerText = formatar(dados.saldo);
            if (elRec) elRec.innerText = formatar(dados.receitas);
            if (elDesp) elDesp.innerText = formatar(dados.despesas);

            // Cor do Saldo
            if (elSaldo) {
                elSaldo.className = dados.saldo >= 0 
                    ? "text-2xl font-bold text-gray-800 mt-1" 
                    : "text-2xl font-bold text-red-600 mt-1";
            }

            // 3. DESENHA OS GRÁFICOS
            const valorReceitas = dados.receitas;
            const valorDespesas = Math.abs(dados.despesas);
            const corReceita = '#59C631';
            const corDespesa = '#F88C12';

            // --- PIZZA ---
            const ctxPizza = document.getElementById('graficoPizza');
            if (ctxPizza) {
                if (chartPizza) chartPizza.destroy();
                chartPizza = new Chart(ctxPizza, {
                    type: 'doughnut',
                    data: {
                        labels: ['Receitas', 'Despesas'],
                        datasets: [{
                            data: [valorReceitas, valorDespesas],
                            backgroundColor: [corReceita, corDespesa],
                            borderWidth: 0,
                            hoverOffset: 4
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: { legend: { position: 'bottom' } }
                    }
                });
            }

            // --- BARRAS ---
            const ctxBarras = document.getElementById('graficoBarras');
            if (ctxBarras) {
                if (chartBarras) chartBarras.destroy();
                chartBarras = new Chart(ctxBarras, {
                    type: 'bar',
                    data: {
                        labels: ['Receitas', 'Despesas'],
                        datasets: [{
                            label: 'Valor (R$)',
                            data: [valorReceitas, valorDespesas],
                            backgroundColor: [corReceita, corDespesa],
                            borderRadius: 5,
                            barThickness: 50
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: { legend: { display: false } },
                        scales: {
                            y: { beginAtZero: true, grid: { color: '#f3f4f6' } },
                            x: { grid: { display: false } }
                        }
                    }
                });
            }

        } catch (error) {
            console.error("Erro dashboard:", error);
        }
    };

    // =================================================================
    // 6. INICIALIZAÇÃO (Onde tudo começa)
    // =================================================================
    document.addEventListener('DOMContentLoaded', () => {
        // 1. Configura as abas
        document.querySelectorAll('.nav-tab').forEach(btn => {
            btn.addEventListener('click', (e) => window.renderContent(e.target.id));
        });

        // 2. Inicia na Visão Geral
        window.renderContent('btn-dashboard');

        // 3. Carrega os dados iniciais
        window.carregarDashboard();
        
        // Se tiver a tabela, carrega ela também
        if(typeof window.carregarTabela === 'function') window.carregarTabela();
    });

    // Esse código verifica se a página foi aberta pelo botão "Voltar" do navegador
    window.addEventListener( "pageshow", function ( event ) {
        var historyTraversal = event.persisted || 
                               ( typeof window.performance != "undefined" && 
                                window.performance.navigation.type === 2 );
        if ( historyTraversal ) {
            // Se for um "Voltar", força o navegador a recarregar a página
            window.location.reload();
        }
    });
    
     // Executa o código JavaScript depois que todo o HTML da página foi carregado
                document.addEventListener('DOMContentLoaded', function () {
                        const profileToggle = document.getElementById('profile-toggle');
                        const dropdownMenu = document.getElementById('profile-dropdown-menu');
                        const profileArrow = profileToggle.querySelector('.profile-arrow');

            // Adiciona um evento de clique ao ícone do perfil para mostrar / esconder o dropdown
                        profileToggle.addEventListener('click', function (event) {
                                event.stopPropagation(); // Impede que o clique se propague para o 'window'
                                dropdownMenu.classList.toggle('show'); // Adiciona ou remove a classe 'show'
                                // Gira a seta para baixo ou para cima

                                profileArrow.style.transform = dropdownMenu.classList.contains('show') ? 'rotate(180deg)' : 'rotate(0deg)';
                        });

                        // Adiciona um evento de clique na janela inteira para fechar o dropdown se ele estiver aberto
                        window.addEventListener('click', function () {
                                if (dropdownMenu.classList.contains('show')) {

                                        dropdownMenu.classList.remove('show');
                                        profileArrow.style.transform = 'rotate(0deg)';
                                }
                        });
                        // --- Lógica da Barra de Pesquisa ---
                        const searchInput = document.querySelector('.search-input');
                        // Adiciona um evento que é disparado toda vez que o usuário digita algo
                        searchInput.addEventListener('input', function () {
                                const searchTerm = this.value.toLowerCase(); // Pega o texto e converte para minúsculas
                                const rows = document.querySelectorAll('#turmasTableBody tr'); // Pega todas as linhas da tabela


                                rows.forEach(row => {
                                        // Verifica se a linha não é a mensagem "Nenhuma turma cadastrada"
                                        if (row.children.length > 1) {
                                                const rowText = row.textContent.toLowerCase();
                                                // Pega todo o texto da linha
                                                // Se o texto da linha incluir o termo pesquisado, mostra a linha. Senão, esconde.
                                                row.style.display = rowText.includes(searchTerm) ? '' : 'none';
                                        }

                                });
                        });
                });

