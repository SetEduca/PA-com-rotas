       /* --- CSS DO DROPDOWN DE PERFIL --- */
     .profile {
                        position: relative;
                        cursor: pointer;
                        z-index: 10;
                }

                .profile-header {
                        display: flex;
                        align-items: center;
                        padding: 5px;
                        border-radius: 50px;
