    <style>
        /* Seus estilos existentes (mantidos) */
        #cadas { background-color: #fff4df; }
        body { background-color: #fff4df; font-family: 'Kodchasan'; }
        header {
    text-align: center;
    background-color: #59C631;
    border-radius: 0 0 40px 40px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    margin-bottom: 30px;
}

        h1 { text-align: center; margin: -10px 0 0 0; position:relative; bottom: 1vh; }
        .botao-imagem { border: none; background: none; cursor: pointer; }
        .botao-imagem:hover img { transform: scale(1.1); }
        img{ position: relative; right: 20px; }
        #logo {
    position: absolute;
    top: 10px;
    right: 15px;
}
        #menu{ position: absolute; top: 5px; left: 10px; }
        #botoes{ border: none; color: none; transition: none; background-color: none; }
        #adi{ position: relative; right: 10px; }

        /* Estilos responsivos novos */
        main {
            display: flex;
            flex: 1;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            padding: 20px;
        }

.container {
    flex: 1 1 300px;
    max-width: 400px;
    display: flex;
    margin-top: 200px;
}


main a {
    display: flex;
    align-items: center;
    justify-content: center;
    color: #000000;
    width: 100%;
    height: 100px;
    background-color: #59C631;
    text-decoration: none;
    font-weight: bold;
    border-radius: 20px;
    transition: 0.3s;
    padding: 10px;
    border: 9px solid #268C41;
    font-size: 18px;
    text-align: center;
}


        a img {
            margin-right: 10px;
        }

        @media (max-width: 768px) {
            main {
                flex-direction: row;
                flex-wrap: wrap;
                margin-top: 30px;
            }
            .container {
                width: calc(50% - 20px);
                margin-top: 10px;
            }
        }

        @media (max-width: 1024px) {
            main {
                flex-direction: row;
            }
            .container {
                width: calc(33.333% - 20px);
                margin-top: 10px;

            }
        }
       
     #nome {
    margin: 0;
    font-size: 1.3em;
}

