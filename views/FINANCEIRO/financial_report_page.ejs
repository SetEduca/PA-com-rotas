        .transaction-details {
            font-size: 12px;
            color: #666;
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 10px;
        }

        .transaction-actions {
            margin-top: 10px;
            display: flex;
            gap: 10px;
            justify-content: flex-end;
        }

        .edit-form {
            display: none;
            margin-top: 15px;
            padding: 15px;
            background: #f0f0f0;
            border-radius: 8px;
            border: 1px solid #ddd;
        }

        .edit-form-group {
            margin-bottom: 10px;
        }

        .success-message {
