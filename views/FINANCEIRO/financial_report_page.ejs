            }
            
            .half-moon-nav {
                width: 250px;
                height: 55px;
                bottom: 15px;
            }
            
            .nav-item {
                font-size: 11px;
                padding: 10px 0;
            }
            
            .transaction-details {
                flex-direction: column;
                gap: 5px;
            }
            
            #logo {
                height: 30px;
            }
        }

        @media (max-width: 360px) {
            .title {
                font-size: 13px;
            }
            
            .half-moon-nav {
